<h1><%= t('generic.login') %></h1>

<%= form_tag sessions_path do %>
  <div class="col-lg-3 well"><fieldset>    
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password, t('activerecord.attributes.user.password') %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "#{t('generic.login')}" %></div>  
  </fieldset></div>   
<% end %>
